pkgname=python-sweb
pkgver=0.2.1
pkgrel=1
pkgdesc="Python sweb module"
arch=('any')
url="https://github.com/forsenior/senior-os"
source_url="https://github.com/forsenior/senior-os.git"
license=('MIT')
depends=(python python-sconf python-pyqt5 python-dataclass-wizard python-validate-email python-pillow python-pyqt5-webengine python-screeninfo python-requests )
source=("git+""$source_url")
sha256sums=('SKIP')

makedepends=(python-poetry)

build() {
    cd "${srcdir}/senior-os/sweb"
    python -m build --wheel --no-isolation
}

package() {
    cd "${srcdir}/senior-os/sweb"
    python -m installer --destdir="$pkgdir" dist/*.whl
}
