pkgname=python-sconf
pkgver=0.2.0
pkgrel=1
pkgdesc="Python sconf module"
arch=('any')
url="https://github.com/forsenior/senior-os"
source_url="https://github.com/forsenior/senior-os.git#branch=221584"
license=('MIT')
depends=(python python-pyqt5 python-dataclass-wizard python-validate-email)
source=("git+""$source_url")
sha256sums=('SKIP')

makedepends=(python-poetry)

build() {
    cd "${srcdir}/senior-os/sconf"
    python -m build --wheel --no-isolation
}

package() {
    cd "${srcdir}/senior-os/sconf"
    python -m installer --destdir="$pkgdir" dist/*.whl
}
