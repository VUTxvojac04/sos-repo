pkgname=python-smail
pkgver=0.2.1
pkgrel=1
pkgdesc="Python smail module"
arch=('any')
url="https://github.com/forsenior/senior-os"
source_url="https://github.com/forsenior/senior-os.git"
license=('MIT')
depends=(python python-pyqt5 python-dataclass-wizard python-pillow python-screeninfo python-chardet python-sconf)
source=("git+""$source_url")
sha256sums=('SKIP')

makedepends=(python-poetry)

build() {
    cd "${srcdir}/senior-os/smail"
    python -m build --wheel --no-isolation
}

package() {
    cd "${srcdir}/senior-os/smail"
    python -m installer --destdir="$pkgdir" dist/*.whl
}
